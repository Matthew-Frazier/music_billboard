<%= form_with(model: artist, local: true, class: "ui form") do |f| %>
  <div class = "field">
    <%= f.label :name %>
    <%= f.text_field :name, required: true, placeholder: "Artist Name", autofocus: true %>

    <%= f.label :genre %>
    <%= f.text_field :genre, required: true, placeholder: "Music Genre"%>

    <%= f.submit nil, class:"ui button green"%>
  </div>
<% end %>